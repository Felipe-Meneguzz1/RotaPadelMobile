<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RotaPadelMobile.Pages.AlterarSenha"
             Title="Alterar Senha"
             BackgroundColor="#C1EE0F">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Alterar Senha"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="Black"
                   FontFamily="InstrumentSans"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <Border BackgroundColor="White" Padding="25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <Label Text="Por segurança, confirme sua senha atual"
                           FontSize="14"
                           TextColor="#666"
                           FontFamily="InstrumentSans"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20"/>
                    <Label Text="Senha atual"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontFamily="InstrumentSans"/>
                    <Border BackgroundColor="#F0F0F0" StrokeThickness="0" Padding="15,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry x:Name="EntrySenhaAtual"
                               Placeholder="Digite sua senha atual"
                               FontFamily="InstrumentSans"
                               TextColor="Black"
                               PlaceholderColor="#999"
                               IsPassword="True"
                               Margin="0"/>
                    </Border>
                    <Label Text="Nova senha"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontFamily="InstrumentSans"
                           Margin="0,15,0,0"/>
                    <Border BackgroundColor="#F0F0F0" StrokeThickness="0" Padding="15,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry x:Name="EntryNovaSenha"
                               Placeholder="Digite a nova senha"
                               FontFamily="InstrumentSans"
                               TextColor="Black"
                               PlaceholderColor="#999"
                               IsPassword="True"
                               Margin="0"/>
                    </Border>
                    <Label Text="Mínimo 6 caracteres"
                           FontSize="12"
                           TextColor="#999"
                           FontFamily="InstrumentSans"
                           Margin="0,-10,0,0"/>
                    <Label Text="Confirmar nova senha"
                           TextColor="Black"
                           FontAttributes="Bold"
                           FontFamily="InstrumentSans"
                           Margin="0,10,0,0"/>
                    <Border BackgroundColor="#F0F0F0" StrokeThickness="0" Padding="15,12">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry x:Name="EntryConfirmarSenha"
                               Placeholder="Confirme a nova senha"
                               FontFamily="InstrumentSans"
                               TextColor="Black"
                               PlaceholderColor="#999"
                               IsPassword="True"
                               Margin="0"/>
                    </Border>
                    <Border BackgroundColor="#FFF3CD" 
                            Padding="15"
                            Margin="0,20,0,0"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Dicas de segurança:"
                                   FontAttributes="Bold"
                                   TextColor="#856404"
                                   FontFamily="InstrumentSans"
                                   FontSize="13"/>
                            <Label Text="• Use letras maiúsculas e minúsculas"
                                   TextColor="#856404"
                                   FontFamily="InstrumentSans"
                                   FontSize="12"/>
                            <Label Text="• Adicione números e símbolos"
                                   TextColor="#856404"
                                   FontFamily="InstrumentSans"
                                   FontSize="12"/>
                            <Label Text="• Evite senhas óbvias"
                                   TextColor="#856404"
                                   FontFamily="InstrumentSans"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>
                    <Button Text="Alterar Senha"
                            BackgroundColor="#0636D4"
                            TextColor="White"
                            FontFamily="InstrumentSans"
                            FontAttributes="Bold"
                            CornerRadius="20"
                            HeightRequest="50"
                            Margin="0,20,0,0"
                            Clicked="OnAlterarSenhaClicked"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>