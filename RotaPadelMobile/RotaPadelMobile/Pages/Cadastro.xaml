<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RotaPadelMobile.Pages.Cadastro"
             Title="Cadastro"
             BackgroundColor="#C1EE0F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header com logo -->
        <Border Grid.Row="0" 
                BackgroundColor="White" 
                Padding="20,15">
            <Label Text="ROTA PADEL" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="Black"
                   FontFamily="InstrumentSans"/>
        </Border>

        <!-- Conteúdo -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="30">

                <!-- Texto "BE A PRO" -->
                <VerticalStackLayout Spacing="-10" HorizontalOptions="End" Margin="0,20,20,0">
                    <Label Text="BE A" 
                           FontSize="70" 
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontFamily="InstrumentSans"
                           LineHeight="0.9"
                           Margin="-5,-30,0,0"/>
                    <Label Text="PRO" 
                           FontSize="70" 
                           FontAttributes="Bold"
                           TextColor="Black"
                           FontFamily="InstrumentSans"
                           LineHeight="0.9"
                           Margin="25,0,0,0"/>
                </VerticalStackLayout>

                <!-- Card Branco -->
                <Border BackgroundColor="White"
                        Padding="25"
                        Margin="0,20,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="25"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="15">

                        <!-- Título Cadastro -->
                        <Label Text="Cadastro" 
                               FontSize="32" 
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               FontFamily="InstrumentSans"
                               Margin="0,0,0,5"/>

                        <!-- Subtítulo -->
                        <Label Text="Crie sua conta para começar" 
                               FontSize="13" 
                               TextColor="#666"
                               HorizontalOptions="Center"
                               FontFamily="InstrumentSans"
                               Margin="0,0,0,15"/>

                        <!-- Campo Nome -->
                        <Frame BackgroundColor="#F0F0F0" 
                               BorderColor="Transparent"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="EntryNome"
                                   Placeholder="Digite seu nome"
                                   FontFamily="InstrumentSans"
                                   TextColor="Black"
                                   PlaceholderColor="#999"
                                   Margin="15,0"/>
                        </Frame>

                        <!-- Campo Email -->
                        <Frame BackgroundColor="#F0F0F0" 
                               BorderColor="Transparent"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="EntryEmail"
                                   Placeholder="Digite seu email"
                                   FontFamily="InstrumentSans"
                                   TextColor="Black"
                                   PlaceholderColor="#999"
                                   Keyboard="Email"
                                   Margin="15,0"/>
                        </Frame>

                        <!-- Campo CPF -->
                        <Frame BackgroundColor="#F0F0F0" 
                               BorderColor="Transparent"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="EntryCPF"
                                   Placeholder="Digite seu CPF"
                                   FontFamily="InstrumentSans"
                                   TextColor="Black"
                                   PlaceholderColor="#999"
                                   Keyboard="Numeric"
                                   MaxLength="11"
                                   Margin="15,0"/>
                        </Frame>

                        <!-- Campo Senha -->
                        <Frame BackgroundColor="#F0F0F0" 
                               BorderColor="Transparent"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="EntrySenha"
                                   Placeholder="Digite sua senha"
                                   FontFamily="InstrumentSans"
                                   TextColor="Black"
                                   PlaceholderColor="#999"
                                   IsPassword="True"
                                   Margin="15,0"/>
                        </Frame>

                        <!-- Campo Confirmar Senha -->
                        <Frame BackgroundColor="#F0F0F0" 
                               BorderColor="Transparent"
                               CornerRadius="10"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="EntryConfirmarSenha"
                                   Placeholder="Confirme sua senha"
                                   FontFamily="InstrumentSans"
                                   TextColor="Black"
                                   PlaceholderColor="#999"
                                   IsPassword="True"
                                   Margin="15,0"/>
                        </Frame>

                        <!-- Botão Cadastrar -->
                        <Button Text="Cadastrar"
                                BackgroundColor="#0636D4"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontFamily="InstrumentSans"
                                Margin="0,10,0,0"
                                Clicked="OnCadastrarClicked"/>

                        <!-- Link Login -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                            <Label Text="Já possui cadastro?" 
                                   FontSize="13" 
                                   TextColor="#666"
                                   FontFamily="InstrumentSans"/>
                            <Label Text="Login" 
                                   FontSize="13" 
                                   TextColor="#0636D4"
                                   FontAttributes="Bold"
                                   FontFamily="InstrumentSans">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnLoginClicked"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>